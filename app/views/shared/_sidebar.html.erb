<div class = 'w-72 h-screen bg-pal-100 p-5'>
    <div class = 'w-full h-full flex flex-col bg-pal-200 rounded-lg shadow-md'>
        <div class = 'flex justify-center py-10'>
            <%= link_to root_path, class: 'w-full flex justify-center' do %>
                <%= image_tag("brand.png", :alt => "trckr logo", class: 'w-1/3') %>
            <% end %>
        </div>
        <div class = 'w-full flex flex-col gap-y-2 grow'>
            <%= link_to root_path, class: current_page?(root_path) ? "w-full side_link flex justify-start items-center py-4 border-r-4 border-pal-500 text-pal-500" : "w-full flex justify-start py-4 text-neutral-500 " do %>
                <p class = 'text-sm font-semibold flex items-center px-10' >
                    <i class="fa-solid fa-border-all text-2xl pr-2"></i>
                    DASHBOARD
                </p>
            <% end %>
            <%= link_to categories_path, class: current_page?(categories_path) ? "w-full side_link flex justify-start items-center py-4 border-r-4 border-pal-500 text-pal-500" : "w-full flex justify-start py-4 text-neutral-500 " do %>
                <p class = 'text-sm font-semibold flex items-center px-10' >
                    <i class="fa-solid fa-layer-group text-2xl pr-2"></i>
                    CATEGORIES
                </p>
            <% end %>
            <%= link_to my_task_path, class: current_page?(my_task_path) ? "w-full side_link flex justify-start items-center py-4 border-r-4 border-pal-500 text-pal-500" : "w-full flex justify-start py-4 text-neutral-500 " do %>
                <p class = 'text-sm font-semibold flex items-center px-10' >
                    <i class="fa-solid fa-list-check text-2xl pr-2"></i>
                    TASKS
                </p>
            <% end %>
            
            <div id = "account_div" class = 'w-full flex flex-col gap-y-2 text-neutral-500'>
               <button class = 'w-full text-sm font-semibold px-10 py-4 text-left flex items-center'><i class="fa-solid fa-user text-2xl pr-2"></i>ACCOUNT</button>

               <div id = 'account_links' class = 'hidden flex-col gap-y-2'>
                    <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex justify-start py-4 text-neutral-500" do %>
                       <p class = 'text-sm font-semibold flex items-center pr-10 pl-14' >
                            <i class="fa-solid fa-arrow-right-from-bracket text-2xl pr-2"></i>
                            LOG-OUT
                        </p>
                    <% end %>
               </div>
            </div>
        </div>
    </div>
</div>

<script>
  document.getElementById('account_div').addEventListener('mouseover', function() {
    document.getElementById('account_links').style.display = 'flex';
  });

  document.getElementById('account_div').addEventListener('mouseout', function() {
    document.getElementById('account_links').style.display = 'none';
  });
</script>
