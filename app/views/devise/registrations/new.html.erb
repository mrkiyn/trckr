<div class = 'w-full h-full flex justify-center items-center bg-pal-100'>
  <div class = 'w-1/4 h-3/6 bg-pal-200 rounded-lg shadow-md flex flex-col justify-center items-center divide-y divide-pal-500'>
    <div class = "w-4/5 flex flex-col justify-center items-center">
      <div class = 'w-full p-2 flex justify-center items-center'>
        <%= image_tag("brand.png", :alt => "trckr logo", class: 'w-2/5') %>
      </div>
      <div class = 'w-4/5 p-2 flex justify-center items-center'>
        <p class= "text-2xl text-center">Sign-up to Tracker!</p>
      </div>
      <div class = "w-4/5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full py-2" }) do |f| %>
          <div class="field w-full pt-2 flex flex-col justify-center items-center">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "w-full rounded-md focus:ring-2 focus:ring-pal-100 focus:border-none", required: true %>
          </div>

          <div class="field w-full pt-2 flex flex-col justify-center items-center">
            <%= f.password_field :password, autocomplete: "new-password",  placeholder: 'Password', class: "w-full rounded-md focus:ring-2 focus:ring-pal-100 focus:border-none", required: true, pattern: ".{6,}"  %>
          </div>

          <div class="field w-full pt-2 flex flex-col justify-center items-center">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: 'Confirm Password', class: "w-full rounded-md focus:ring-2 focus:ring-pal-100 focus:border-none", required: true, pattern: ".{6,}" %>
          </div>

          <div class="actions w-full pt-2 flex flex-col justify-center items-center">
            <%= f.submit "Sign up", class: 'py-2 w-2/3 bg-pal-500 rounded-md text-white' %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class = "w-4/5 flex flex-col justify-center items-center">
      <div class = "w-4/5 flex flex-col justify-center items-center">
        <div class="actions w-full pt-2 flex flex-col justify-center items-center">
          <%= link_to "Log in", new_session_path(resource_name), class: "py-2 w-2/3 bg-pal-500 rounded-md text-white text-center" %><br />
        </div>
      </div>
    </div>
  </div>
</div>

